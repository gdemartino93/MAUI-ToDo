<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_ToDo.MVVM.Views.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainView">
    <Grid Margin="15" RowDefinitions=".1*,.3*,.6*">
        <Label StyleClass="Header, DarkAzure" Text="To do" />
        <Grid Grid.Row="1" RowDefinitions="0.2*,0.8*">
            <Label StyleClass="LightAzure, SubHeader" Text="CATEGORIE" />
            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <RoundRectangle />
                            <VerticalStackLayout Padding="15" Spacing="10">
                                <Label StyleClass="LightAzure" Text="{Binding PendingTasks, StringFormat='{0} AttivitÃ '}" />
                                <Label StyleClass="LightAzure, CardTitle" Text="{Binding Name}" />
                                <ProgressBar Progress="{Binding Percentage}" ProgressColor="{Binding Color}" />
                            </VerticalStackLayout>
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Grid Grid.Row="2" BackgroundColor="Black" />
    </Grid>
</ContentPage>